<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".WateringControlActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/btnback"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/backbutton"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/turnonpump"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/turnon"
        android:layout_below="@+id/btnback"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvturnon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/turnonpump"
        android:text="TURN ON"
        android:textSize="19dp"
        android:layout_marginLeft="80dp"/>

    <ImageView
        android:id="@+id/turnoffpump"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/turnoff"
        android:layout_below="@+id/btnback"

        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/turnonpump"
        />

    <TextView
        android:id="@+id/tvturnoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/turnoffpump"
        android:layout_toRightOf="@+id/tvturnon"
        android:text="TURN OFF"
        android:textSize="19dp"
        android:layout_marginLeft="80dp"/>

        <ImageView
            android:layout_marginTop="18dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tvturnoff"
            android:id="@+id/watering"
            android:layout_centerHorizontal="true"
            android:src="@drawable/water2"
            />

        <TextView
            android:id="@+id/tvwatering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/watering"
            android:text="Turn On for Watering"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/tvturnon"/>
    <ImageView
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="970px"
        android:layout_alignParentBottom="true"


        />
    </RelativeLayout>
</LinearLayout>